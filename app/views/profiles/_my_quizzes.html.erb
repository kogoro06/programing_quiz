<div class="flex flex-wrap gap-3 items-center justify-center lg:md:justify-between max-w-[1200px]">
  <% if @quizzes.any? %>
    <div class="w-full">
      <div class="bg-primary w-fit p-3 text-white text-xl my-5">
        <%= @user.name %>が投稿したクイズ一覧
      </div>
    </div>
    <% @quizzes.each do |quiz| %>
      <!-- 統合されたクイズカード -->
      <div class="bg-white p-5 w-[45%] max-w-[700px] min-w-[450px]">
        <p class="text-2xl p-1 text-accent font-bold">
          <%= link_to quiz.title, quiz_post_path(quiz) %>
        </p>
        <div class="flex items-center justify-between w-full p-1">
          <div class="flex items-center space-x-3 text-lg">
            <% if quiz.user&.profile&.user_icon&.attached? %>
              <%= image_tag quiz.user.profile.user_icon, class: 'w-6 h-6 rounded-full object-cover border border-primary' %>
            <% else %>
              <%= image_tag 'profile_sample.png', class: 'w-6 h-6 rounded-full object-cover border border-primary' %>
            <% end %>
            <%= link_to user_profile_path(quiz.user.id), class: "block text-primary" do %>
              <%= quiz.author_name %>
            <% end %>
          </div>
          <p class="ml-auto text-primary"><%= quiz.created_date %></p>
        </div>
        <div class="flex p-2 items-center space-x-3 justify-between">
          <div class="flex space-x-2">
            <% if quiz.tags.present? %>
              <% quiz.tags.each do |tag| %>
                <%= link_to tag_path(tag), class: "btn-sm text-lg text-white text-center whitespace-nowrap rounded-lg", style: "background-color: #{tag.color};" do %>
                  <%= tag.name %>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <div class="text-lg whitespace-nowrap text-primary">
            全<%= quiz.questions_count %>問
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="w-full">
      <p class="text-gray-500 text-lg">まだクイズが投稿されていません。</p>
    </div>
  <% end %>
</div>
<%= paginate @quizzes %>
