<div class="bg-base-100 rounded-lg p-6 flex items-center shadow w-full max-w-2xl">
  <div class="flex flex-col w-full space-y-4">
    <!-- クイズタイトル -->
    <%= link_to quiz_post_path(quiz), class: "flex items-center gap-2" do %>
      <p class="text-accent text-lg font-bold"><%= quiz.title %></p>
    <% end %>

    <!-- 作成者情報 -->
    <div class="flex justify-between items-center">
      <div class="flex items-center gap-2">
        <% if quiz.user&.profile&.user_icon&.attached? %>
          <%= image_tag quiz.user.profile.user_icon, class: 'w-6 h-6 rounded-full object-cover border border-primary' %>
        <% else %>
          <%= image_tag 'profile_sample.png', class: 'w-6 h-6 rounded-full object-cover border border-primary' %>
        <% end %>
        <%= link_to user_profile_path(quiz.user.id), class: "flex items-center gap-2" do %>
          <p class="text-sm"><%= quiz.user&.name || "作者不明" %></p>
        <% end %>
      </div>
      <p class="text-primary text-sm"><%= quiz.created_at.strftime('%Y/%m/%d') %></p>
    </div>

    <!-- タグと問題数 -->
    <div class="flex justify-between space-x-2">
      <%= render partial: "tags/buttons/tags", locals: { tags: quiz.tags } %>
      <p class="text-primary text-sm">
        全<%= quiz.questions_count %>問
      </p>
    </div>
  </div>
</div>
