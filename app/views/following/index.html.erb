<div class="bg-white flex flex-col items-center pt-10">
  <div class="text-center mb-6">
    <h1 class="text-3xl md:text-3xl lg:text-4xl font-bold text-accent text-center">
      <%= t('devise.following.index.title') %>
    </h1>
  </div>
  <div class="bg-gray-100 rounded-lg shadow-lg p-12 w-10/12">
    <div class="flex flex-col space-y-4">
      <% ["shabero", "kogoro", "556", "20文字確認用ああああああああああああああ"].each do |username| %>
        <div class="flex items-center bg-white rounded p-4 shadow-sm">
          <%= image_tag "profile_sample.png", alt: "Profile Picture", class: "w-12 h-12 rounded-full mr-4 flex-shrink-0" %>
          <span class="text-lg md:text-lg text-sm font-medium text-blue-800 break-words max-w-[5rem] sm:max-w-xs sm:whitespace-nowrap"><%= username %></span>
          <button class="ml-auto text-green-500 bg-gray-100 hover:bg-gray-200 font-medium rounded-lg text-sm px-3 sm:px-5 py-1.5 sm:py-2.5 text-xs sm:text-sm">フォロー中</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
